<% provide(:title, "Edit user") %> <h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	 <div class="gravatar_edit">
      <%= gravatar_for @user, size: 150, id: "gravatar_edit_image" %><br>
      <a href="http://gravatar.com/emails">(change image)</a>
    </div><br>
    <%= form_for(@user) do |f| %>
    
    <%= render 'fields', f: f %>

    <%= f.submit "Save changes", class: "btn btn-grn" %>
    <% end %>

   
  </div>
</div>